    Deal4_FirstPlayer : enter / _adapter.DealThreeCards();
    Deal4_SecondPlayer : enter / _adapter.DealThreeCards();
    Deal4_ThirdPlayer : enter / _adapter.DealThreeCards();
    Deal4_FourthPlayer : enter / _adapter.DealThreeCards();
}



